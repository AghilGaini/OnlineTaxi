@model Database.Domain.ViewModels.AppSetting.TermsViewModel
@{
    ViewBag.Title = "قوانین";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post" asp-action="Terms">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div>
            <label asp-for="Terms">قوانین</label>
            <input asp-for="Terms" class="form-control" />
            <span asp-validation-for="Terms" class="text-danger"></span>
            <input asp-for="KeyString" type="hidden" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">ذخیره</button>
    <a asp-action="Index" asp-controller="Admin" class="btn btn-danger">
        بازگشت
    </a>
</form>


@model Database.Domain.ViewModels.EmailSetting.EmailSettingViewModel
@{
    ViewBag.Title = "مدیریت ایمیل ها";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>لیست ایمیل ها</h3>

<table class="table table-dark">
    <thead>
        <tr>
            <th>ایمیل</th>
            <th>SMTP Server</th>
            <th>SMTP Port</th>
            <th>SSL</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.EmailsInfo)
        {
            <tr>
                <td>
                    @item.Address
                    <input asp-for="@item.Id" type="hidden">
                </td>
                <td>
                    @item.SmtpServer
                </td>
                <td>
                    @item.SmtpPort
                </td>
                <td>
                    @item.UseSSL
                </td>
                <td>
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        عملیات
                    </button>
                    <div class="dropdown-menu shadow animated--grow-in">
                        @foreach (var link in Model.Actions)
                        {
                            <a style='margin-right:16px' class="dropdown-item"
                       asp-controller="@link.Controller" asp-action="@link.Action" asp-route-Id="@item.Id">
                                @link.Title
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" asp-controller="EmailSetting" class="btn btn-success">
    جدید
</a>


